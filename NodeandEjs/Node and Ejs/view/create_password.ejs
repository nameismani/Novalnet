<%- include('./components/head.ejs',{title :'ForgotPassword'}) %>

<body>


<div class="page page-center">
    <div class="container container-tight py-4">
      <div class="text-center mb-4">
        <a href="javascript:void(0)" class="navbar-brand navbar-brand-autodark">
          <img src="assets/logo.svg" width="110" height="32" alt="Tabler" class="navbar-brand-image">
        </a>
      </div>
      <form id="create_new_password" class="card card-md"autocomplete="off" novalidate="">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Forgot password</h2>
          <p class="text-secondary mb-4">Enter your new Password and confirm password will be reset and password to you.</p>
          <div class="mb-2">
            <label class="form-label">
              Password
              
            </label>
            <div class="input-group input-group-flat">
              <input   id="new_pass" type="password" class="form-control" placeholder="Enter New password" autocomplete="off">
              <span class="input-group-text">
                <a id="show_new_password"  class="link-secondary" data-bs-toggle="tooltip" aria-label="Show password" data-bs-original-title="Show password">
                 <span id="eye_icon_pass"> <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"></path><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"></path></svg> </span>
                </a>
              </span>
            </div>
          </div>
          <p id="new_pass_err"  class="error_show"></p>
          <div class="mb-3">
            <label class="form-label">Confirm Password</label>
            <input id="new_conf_pass" type="text" class="form-control" placeholder="Re-Enter  Password">
          </div>
          <p id="conf_pass_err"  class="error_show"></p>
          <div class="form-footer">
            <button type="submit" class="btn btn-primary w-100">
              <!-- Download SVG icon from http://tabler-icons.io/i/mail -->
              <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-lock" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"  stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M5 13a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2v6a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2v-6z" />
                <path d="M11 16a1 1 0 1 0 2 0a1 1 0 0 0 -2 0" />
                <path d="M8 11v-4a4 4 0 1 1 8 0v4" />
              </svg>  Update new password
            </button>
          </div>
        </div>
      </form>
      <div class="text-center text-secondary mt-3">
        Forget it, <a href="/signin">send me back</a> to the sign in screen.
      </div>
    </div>
  </div>
  <%- include('./components/successful_modal.ejs',{id:'createPassSuccess',status:"New Password Created "})  %>
  <%- include('./components/errorModal.ejs',{id:'createPassError',status:"Access Denied"})  %>

  <script src="assets/fontawesome/js/all.js"></script>
  <script src="jquery/jQuery.js"></script>
  <script src="assets/bootstrap/js/bootstrap.js"></script>
  <script src="script/create_new_password.js">

    
  </script>

</body>